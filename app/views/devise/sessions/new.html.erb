<div class="user-boxes col-lg-4 col-lg-offset-4 col-sm-5 col-sm-offset-4 col-xs-10 col-xs-offset-1">
  <h2>Hi! Glad you're back!</h2>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :login, label: 'Username', required: false, autofocus: true %>
      <br>
      <%= f.input :password, required: false %>
    </div>
    <br>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn-success' %>
    </div>
    <br>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
